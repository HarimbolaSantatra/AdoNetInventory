@model AppInventaire.Models.Computer

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Ajouter";

    List<SelectListItem> brandSelectList = Model.GetBrandSelectListItems();

}

@section style{
    
}

<h2>Ajouter</h2>
<div class="form-horizontal">
    <h4>Ordinateur</h4>
    <hr />

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <!-- BRAND -->
    <div class="form-group">
        @Html.LabelFor(model => model.Brand, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Brand, brandSelectList, "-- Choisir Marque --",
                new { @class = "form-select my-3" }
           )
        </div>
    </div>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-outline-info" data-toggle="modal" data-target="#exampleModal">
        Ajouter une marque
    </button>

    <!-- Add Computer Brand Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ajout - Marque Ordinateur</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <!-- CHAMP AJOUT -->
                <form method="post">
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="brandInput">Marque</label>
                            <input class="form-control" id="brandInput" name="brandInput"
                                   aria-describedby="brandHelp" placeholder="Nom de la marque">
                            <small id="brandHelp" class="form-text text-muted"> Champ Requis </small>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                            <button type="submit" class="btn btn-primary"> Ajouter </button>
                        </div>
                    </div>
                </form>
                
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.OS, htmlAttributes: new { @class = "control-label col-md-2" })
