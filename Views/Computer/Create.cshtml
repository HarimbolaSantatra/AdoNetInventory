    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Ajouter" class="btn btn-primary" />
        </div>
    </div>

    <div>
        @Html.ActionLink("Retour", "Index")
    </div>

</div>

