@model IEnumerable<AppInventaire.Models.Computer>
@{
    ViewBag.Title = "Ordinateur";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section style{}

<div class="d-flex justify-content-end">
    <div>
        <a href="/Computer/Create" class="btn btn-info">AJOUTER</a>
    </div>
</div>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th> ID </th>
            <th> Nom de l'hôte </th>
            <th> Marque </th>
            <th> Modèle </th>
            <th> Système d'exploitation</th>
            <th> Processeur </th>
            <th> RAM (Go)</th>
            <th> Carte Graphique </th>
            <th> Mémoire Carte Graphique (Go)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Computer in Model)
        {
            <tr>
                <th> @Html.DisplayFor(model => Computer.ID) </th>
                <td> @Html.DisplayFor(model => Computer.Hostname) </td>
                <td> @Html.DisplayFor(model => Computer.Brand) </td>
                <td> @Html.DisplayFor(model => Computer.Model) </td>
                <td> @Html.DisplayFor(model => Computer.OS) </td>
                <td> @Html.DisplayFor(model => Computer.Processor) </td>
                <td> @Html.DisplayFor(model => Computer.RamGB) </td>
                <td> @Html.DisplayFor(model => Computer.GraphCard) </td>
                <td> @Html.DisplayFor(model => Computer.GraphCardGB) </td>
                <td>
                    <!-- BUTTON GROUP -->
                    <div class="btn-group" role="group" aria-label="Action Group">

                        <a type="button" class="btn btn-info" href="/Computer/Details/@Computer.ID">
                            <!-- Details Icon -->
                            <i class="fa fa-info-circle" aria-hidden="true"></i>
                        </a>

                        <a type="button" class="btn btn-info" href="/Computer/Edit/@Computer.ID">
                            <!-- Edit Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
                            </svg>
                        </a>

                        <a type="button" class="btn btn-danger" href="/Computer/Delete/@Computer.ID">
                            <!-- Delete Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </a>

                        <a type="button" class="btn btn-info" href="#">
                            <!-- Print Icon -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-printer" viewBox="0 0 16 16">
                                <path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1z" />
                                <path d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2H5zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4V3zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2H5zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1z" />
                            </svg>
                        </a>

                    </div>

                </td>
            </tr>
        }

    </tbody>
</table>


@section scripts{} 